@model HRMPj.Models.PayRoll

@{

    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "PayRoll";
}


<div class="main-card mb-3 card">
    <div class="card-header">
        <div class="media flex-wrap w-100 align-items-center">
            <div class=" media-body ml-3">
                <div class="text-muted large">
                    @ViewData["Title"]
                </div>
            </div>
        </div>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>@ViewBag.Message</div>
            <div class="position-relative row form-group">
                <label asp-for="PaymentDate" class="col-sm-2 col-form-label">PaymentDate</label>
                <div class="col-sm-5">
                    <input asp-for="PaymentDate" id="PaymentDate" placeholder="Enter date" type="text" class="form-control" />
                    <span asp-validation-for="PaymentDate" class="text-danger"></span>
                </div>
            </div>
            <div class="position-relative row form-group">
                <label asp-for="BasicSalary" class="col-sm-2 col-form-label">BasicSalary</label>
                <div class="col-sm-5">
                    <input asp-for="BasicSalary" id="BasicSalary" placeholder="Enter salary" type="text" class="form-control" />
                    <span asp-validation-for="BasicSalary" class="text-danger"></span>
                </div>
            </div>
            <div class="position-relative row form-group">
                <label asp-for="OTFee" class="col-sm-2 col-form-label">OTFee</label>
                <div class="col-sm-5">
                    <input asp-for="OTFee" id="OTFee" placeholder="With a placeholder" type="text" class="form-control" />
                    <span asp-validation-for="OTFee" class="text-danger"></span>
                </div>
            </div>
            <div class="position-relative row form-group">
                <label asp-for="TotalAllowence" class="col-sm-2 col-form-label">TotalAllowence</label>
                <div class="col-sm-5">
                    <input asp-for="TotalAllowence" id="TotalAllowence" placeholder="With a placeholder" type="text" class="form-control" />
                    <span asp-validation-for="TotalAllowence" class="text-danger"></span>
                </div>
            </div>
            <div class="position-relative row form-group">
                <label asp-for="Bonus" class="col-sm-2 col-form-label">Bonus</label>
                <div class="col-sm-5">
                    <input asp-for="Bonus" id="Bonus" placeholder="With a placeholder" type="text" class="form-control" />
                    <span asp-validation-for="Bonus" class="text-danger"></span>
                </div>
            </div>
            <div class="position-relative row form-group">
                <label asp-for="PenaltyFee" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-5">
                    <input asp-for="PenaltyFee" class="form-control" />
                    <span asp-validation-for="PenaltyFee" class="text-danger"></span>
                </div>
            </div>           
            <div class="position-relative row form-group">
                <label asp-for="NetPay" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-5">
                    <input asp-for="NetPay" class="form-control" />
                    <span asp-validation-for="NetPay" class="text-danger"></span>
                </div>
            </div>          
            <div class="position-relative row form-group">
                <label asp-for="EmployeeInfoId" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-5">
                    <select asp-for="EmployeeInfoId" class="form-control" asp-items="ViewBag.EmployeeInfoId"></select>
                </div>
            </div>
            <div class="position-relative row form-group">
                <div class="col-sm-2"></div>
                <div class="col-sm-5">
                    <input type="submit" value="Create" class="mb-2 mr-2 btn-icon btn-pill btn btn-outline-primary" />
                    <a asp-action="Index" class="mb-2 mr-2 btn-icon btn-pill btn btn-outline-primary">Back to List</a>\
                </div>
            </div>
        </form>
    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
