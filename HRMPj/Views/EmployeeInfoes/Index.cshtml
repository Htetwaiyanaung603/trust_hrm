@model IEnumerable<HRMPj.Models.EmployeeInfo>

@{
    ViewData["Title"] = "Employee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    <a asp-action="Create" class="mb-2 mr-2 btn-icon btn-pill btn btn-primary">Create New</a>
</p>
<div class="main-card mb-3 card">
    <div class="card-header">
        <div class="media flex-wrap w-100 align-items-center">
            <div class=" media-body ml-3">
                <div class="text-muted large">
                    @ViewData["Title"]
                </div>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div id="example_wrapper" class="dataTables_wrapper dt-bootstrap4">
            @*<div class="row"><div class="col-sm-12 col-md-6"><div class="dataTables_length" id="example_length"><label>Show <select name="example_length" aria-controls="example" class="custom-select custom-select-sm form-control form-control-sm"><option value="10">10</option><option value="25">25</option><option value="50">50</option><option value="100">100</option></select> entries</label></div></div><div class="col-sm-12 col-md-6"><div id="example_filter" class="dataTables_filter"><label>Search:<input type="search" id="search" class="form-control form-control-sm" placeholder="" aria-controls="example"><input type="submit" class="form-control form-control-sm" /></label></div></div></div><div class="row">*@
                <div class="col-sm-12">
                    <table style="width: 100%;" id="example" class="table table-hover table-striped table-bordered dataTable dtr-inline" role="grid" aria-describedby="example_info">

                        <thead>
                            <tr>
                                <th>
                                    No
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.EmployeeName)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.BasicSalary)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IsActive)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.Branch)
                                </th>
                                
                                <th>
                                    @Html.DisplayNameFor(model => model.Department)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Designation)
                                </th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody id="SearchId">
                            @{var i = 0;}
                            @foreach (var item in Model)
                            {
                                i++;
                            <tr>
                                <td>
                                    @i
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EmployeeName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BasicSalary)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IsActive)
                                </td>
                                @*<td>
            @Html.DisplayFor(modelItem => item.CreatedDate)
        </td>*@

                                @*<td>
            <img src="@item.EmployeeProfile" width="120px" height="120px" />
        </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.Branch.BranchName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Department.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Designation.Name)
                                </td>
                                <td>
                                    @*<a asp-action="Edit" asp-route-id="@item.Id" class="mb-2 mr-2 btn-icon btn-shadow btn-outline-2x btn btn-outline-primary">Edit</a>*@
                                    <a asp-action="Index1" asp-route-id="@item.Id" class="mb-2 mr-2 btn-icon btn-shadow btn-outline-2x btn btn-outline-primary">Profile</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="mb-2 mr-2 btn-icon btn-shadow btn-outline-2x btn btn-outline-danger">Delete</a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>

            @*</div><div class="row"><div class="col-sm-12 col-md-5"><div class="dataTables_info" id="example_info" role="status" aria-live="polite">Showing 1 to 10 of 57 entries</div></div><div class="col-sm-12 col-md-7"><div class="dataTables_paginate paging_simple_numbers" id="example_paginate"><ul class="pagination"><li class="paginate_button page-item previous disabled" id="example_previous"><a href="#" aria-controls="example" data-dt-idx="0" tabindex="0" class="page-link">Previous</a></li><li class="paginate_button page-item active"><a href="#" aria-controls="example" data-dt-idx="1" tabindex="0" class="page-link">1</a></li><li class="paginate_button page-item "><a href="#" aria-controls="example" data-dt-idx="2" tabindex="0" class="page-link">2</a></li><li class="paginate_button page-item "><a href="#" aria-controls="example" data-dt-idx="3" tabindex="0" class="page-link">3</a></li><li class="paginate_button page-item "><a href="#" aria-controls="example" data-dt-idx="4" tabindex="0" class="page-link">4</a></li><li class="paginate_button page-item "><a href="#" aria-controls="example" data-dt-idx="5" tabindex="0" class="page-link">5</a></li><li class="paginate_button page-item "><a href="#" aria-controls="example" data-dt-idx="6" tabindex="0" class="page-link">6</a></li><li class="paginate_button page-item next" id="example_next"><a href="#" aria-controls="example" data-dt-idx="7" tabindex="0" class="page-link">Next</a></li></ul></div></div></div>*@
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(function () {
            $('.metismenu li').removeClass("mm-active");
            $('.metismenu li ul').removeClass("mm-show");
            $('.metismenu li ul li a').removeClass("mm-active");
            $('.metismenu #startup').addClass("mm-active");
            $('.metismenu  #startup ul').addClass("mm-show");

            $('.metismenu #employee').addClass("mm-active");
            $('#example').DataTable();
        });
    </script>
}
