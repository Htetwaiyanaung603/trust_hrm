@model HRMPj.Models.EmployeeInfoViewModel

@{

    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Designation";
}


<div class="main-card mb-3 card">
    <div class="card-header">
        <div class="media flex-wrap w-100 align-items-center">
            <div class=" media-body ml-3">
                <div class="text-muted large">
                    @ViewData["Title"]
                </div>
            </div>
        </div>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>@ViewBag.Message</div>

            <div class="position-relative row form-group">
                <label asp-for="EmployeeName" class="col-sm-2 col-form-label">EmployeeName</label>
                <div class="col-sm-4">
                    <input asp-for="EmployeeName" id="EmployeeName" placeholder="Enter name" type="text" class="form-control" />
                    <span asp-validation-for="EmployeeName " class="text-danger"></span>

                </div>
                <label asp-for="FatherName" class="col-sm-2 col-form-label">FatherName</label>
                <div class="col-sm-4">
                    <input asp-for="FatherName" id="FatherName" placeholder="Enter father name" type="text" class="form-control" />
                    <span asp-validation-for="FatherName " class="text-danger"></span>

                </div>
            </div>
            <div class="position-relative row form-group">
                <label asp-for="Gender" class="col-sm-2 col-form-label">Gender</label><br />
                <div class="col-sm-4">
                    <select asp-for="Gender" class="form-control">
                        <option>Male</option>
                        <option>Female</option>
                    </select>
                    <span asp-validation-for="Gender  " class="text-danger"></span>

                </div>
                <label asp-for="NRC" class="col-sm-2 col-form-label">NRC</label>
                <div class="col-sm-4">
                    <input asp-for="NRC" id="NRC" placeholder="Enter NRC" type="text" class="form-control" />
                    <span asp-validation-for="NRC " class="text-danger"></span>

                </div>
            </div>
            <div class="position-relative row form-group">
                <label asp-for="Nationality" class="col-sm-2 col-form-label">Nationality</label>
                <div class="col-sm-4">
                    <input asp-for="Nationality" id="Nationality" placeholder="With a placeholder" type="text" class="form-control" />
                    <span asp-validation-for="Nationality " class="text-danger"></span>

                </div>
                <label asp-for="MartialStatus" class="col-sm-2 col-form-label">MartialStatus</label>
                <div class="col-sm-4">
                    <input asp-for="MartialStatus" id="MartialStatus" placeholder="With a placeholder" type="text" class="form-control" />
                    <span asp-validation-for="MartialStatus " class="text-danger"></span>

                </div>
            </div>
            <div class="position-relative row form-group">
                <label asp-for="DateOfBirth" class="col-sm-2 col-form-label">DateOfBirth</label>
                <div class="col-sm-4">
                    <input type="date" asp-for="DateOfBirth" class="form-control" />
                    <span asp-validation-for="DateOfBirth " class="text-danger"></span>
                </div>
                <label asp-for="MobilePhone" class="col-sm-2 col-form-label">MobilePhone</label>
                <div class="col-sm-4">
                    <input asp-for="MobilePhone" id="MobilePhone" placeholder="Enter phone number" type="text" class="form-control" />
                    <span asp-validation-for="MobilePhone" class="text-danger"></span>

                </div>
            </div>
            <div class="position-relative row form-group">
                <label asp-for="CurrentAddress" class="col-sm-2 col-form-label">CurrentAddress</label>
                <div class="col-sm-4">
                    <input asp-for="CurrentAddress" id="CurrentAddress" placeholder="Enter address" type="text" class="form-control" />
                    <span asp-validation-for="CurrentAddress " class="text-danger"></span>

                </div>
                <label asp-for="EmergencyNo" class="col-sm-2 col-form-label">EmergencyNo</label>
                <div class="col-sm-4">
                    <input asp-for="EmergencyNo" id="EmergencyNo" placeholder="Enter nunmber" type="text" class="form-control" />
                    <span asp-validation-for="EmergencyNo " class="text-danger"></span>

                </div>
            </div>
            <div class="position-relative row form-group">
                <label asp-for="AccountNo" class="col-sm-2 col-form-label">AccountNo</label>
                <div class="col-sm-4">
                    <input asp-for="AccountNo" id="AccountNo" placeholder="Enter acc number" type="text" class="form-control" />
                    <span asp-validation-for="AccountNo " class="text-danger"></span>

                </div>
                <label asp-for="ATMNumber" class="col-sm-2 col-form-label">ATMNumber</label>
                <div class="col-sm-4">
                    <input asp-for="ATMNumber" id="ATMNumber" placeholder="Enter ATM unmber" type="text" class="form-control" />
                    <span asp-validation-for="ATMNumber " class="text-danger"></span>

                </div>
            </div>
            <div class="position-relative row form-group">
                <label asp-for="EmployeeProfile" class="col-sm-2 col-form-label">EmployeeProfile</label>
                <div class="col-sm-4">
                    <input asp-for="EmployeeProfile" id="EmployeeProfile" class="form-control" />
                    <span asp-validation-for="EmployeeProfile " class="text-danger"></span>

                </div>
                <label asp-for="DocumentProfile" class="col-sm-2 col-form-label">DocumentProfile</label>
                <div class="col-sm-4">
                    <input multiple asp-for="DocumentProfile" id="DocumentProfile" class="form-control" />
                    <span asp-validation-for="DocumentProfile " class="text-danger"></span>


                </div>
            </div>
            <div class="position-relative row form-group">
                <label asp-for="BranchId" class="col-sm-2 col-form-label">BranchId</label>
                <div class="col-sm-4">
                    <select asp-for="BranchId" id="BranchId" class="form-control" asp-items="ViewBag.BranchId">
                        <option>--Select--</option>

                    </select>
                    <span asp-validation-for="BranchId " class="text-danger"></span>

                </div>
                <label asp-for="DepartmentId" class="col-sm-2 col-form-label">DepartmentId</label>
                <div class="col-sm-4">
                    <select asp-for="DepartmentId" id="DepartmentId" class="form-control">
                        <option>--Select--</option>
                    </select>
                    <span asp-validation-for="DepartmentId " class="text-danger"></span>

                </div>
            </div>
            <div class="position-relative row form-group">
                <label asp-for="DesignationId" class="col-sm-2 col-form-label">DesignationId</label>
                <div class="col-sm-4">
                    <select asp-for="DesignationId" id="DesignationId" class="form-control">
                        <option>--Select--</option>
                    </select>
                    <span asp-validation-for="DesignationId " class="text-danger"></span>

                </div>
                <label asp-for="BasicSalary" class="col-sm-2 col-form-label">Basic Salary</label>
                <div class="col-sm-4">
                    <input asp-for="BasicSalary" class="form-control" />
                </div>
            </div>
                <label>
                    <input asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                </label>
                <div class="position-relative row form-group">
                    <div class="col-sm-2"></div>
                    <div class="col-sm-5">
                        <input type="submit" value="Create" class="mb-2 mr-2 btn-icon btn-pill btn btn-outline-primary" />
                        <a asp-action="Index" class="mb-2 mr-2 btn-icon btn-pill btn btn-outline-primary">Back to List</a>
                    </div>
                </div>
        </form>
    </div>
</div>
  



@section Scripts {
    <script>
        $(document).ready(function () {
            $("#BranchId").on("change", function () {

                var param = this.value;
                $.ajax({
                    contentType: 'application/json; charset=utf-8',
                    type: "GET",
                    url: '/EmployeeInfoes/GetDepartmentList?BranchId=' + param,

                    success: function (data) {

                        var html = '<option>--Select--</option>';
                        var len = data.length;
                        if (len == 0) {
                            $('#DepartmentId').html(html);
                        }
                        else {
                            for (var i = 0; i < len; i++) {
                                html += '<option value="' + data[i].Id + '">'
                                    + data[i].Name
                                    + '</option>';
                            }
