<div class="app-header header-shadow">
    <div class="app-header__logo">
        <div class="logo-src"></div>
        <div class="header__pane ml-auto">
            <div>
                <button type="button" class="hamburger close-sidebar-btn hamburger--elastic" data-class="closed-sidebar">
                    <span class="hamburger-box">
                        <span class="hamburger-inner"></span>
                    </span>
                </button>
            </div>
        </div>
    </div>
    <div class="app-header__mobile-menu">
        <div>
            <button type="button" class="hamburger hamburger--elastic mobile-toggle-nav">
                <span class="hamburger-box">
                    <span class="hamburger-inner"></span>
                </span>
            </button>
        </div>
    </div>
    <div class="app-header__menu">
        <span>
            <button type="button" class="btn-icon btn-icon-only btn btn-primary btn-sm mobile-toggle-header-nav">
                <span class="btn-icon-wrapper">
                    <i class="fa fa-ellipsis-v fa-w-6"></i>
                </span>
            </button>
        </span>
    </div>
    <div class="app-header__content">
        <div class="app-header-left">
            <h3>Human Resources Management System</h3>
        </div>
        <div class="app-header-right">
            <div class="header-dots">
            </div>
            <div class="header-btn-lg pr-0">
                <div class="widget-content p-0">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Account/Login", new { area = "Identity" })" method="post" id="logoutForm">

                            <div class="widget-content-wrapper">

                                <div class="widget-content-left  ml-3 header-user-info">
                                    <div class="widget-heading">
                                        @UserManager.GetUserName(User)
                                    </div>
                                    <div class="widget-subheading">

                                    </div>
                                </div>
                                <div class="widget-content-right header-user-info ml-3">
                                    <button type="submit" class="btn-shadow p-1 btn btn-danger btn-sm show-toastr-example">
                                        <i class="fa text-white fa-power-off pr-1 pl-1"></i>
                                    </button>
                                </div>
                            </div>
                        </form>
                    }
                </div>
            </div>
            <div class="header-btn-lg">
                <button type="button" onclick="javascript:toggleFullScreen()" class="hamburger hamburger--elastic open-right-drawer">
                    <span class="hamburger-box">
                        <i class="fa fa-arrows-alt"></i>
                    </span>
                </button>
            </div>
        </div>
    </div>
</div>



