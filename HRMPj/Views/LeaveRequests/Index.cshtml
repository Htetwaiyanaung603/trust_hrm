@model IEnumerable<HRMPj.Models.LeaveRequest>

@{
    ViewData["Title"] = "Leave Request";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<p>
    <a asp-action="Create" class="mb-2 mr-2 btn-icon btn-pill btn btn-primary">Create New</a>
</p>
<div class="main-card mb-3 card">
    <div class="card-header">
        <div class="media flex-wrap w-100 align-items-center">
            <div class=" media-body ml-3">
                <div class="text-muted large">
                    @ViewData["Title"]
                </div>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div id="example_wrapper" class="dataTables_wrapper dt-bootstrap4">
            @*<div class="row"><div class="col-sm-12 col-md-6"><div class="dataTables_length" id="example_length"><label>Show <select name="example_length" aria-controls="example" class="custom-select custom-select-sm form-control form-control-sm"><option value="10">10</option><option value="25">25</option><option value="50">50</option><option value="100">100</option></select> entries</label></div></div><div class="col-sm-12 col-md-6"><div id="example_filter" class="dataTables_filter"><label>Search:<input type="search" class="form-control form-control-sm" placeholder="" aria-controls="example"></label></div></div></div><div class="row">*@
                <div class="col-sm-12">
                    <table style="width: 100%;" id="example" class="table table-hover table-striped table-bordered dataTable dtr-inline" role="grid" aria-describedby="example_info">

                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.CurrentYear)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.LeaveFromDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.LeaveToDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.LeaveTotalDay)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.HalfDay)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.Status)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.UnPaidLeaveStatus)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.LeaveType)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.FromEmployeeInfo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ToEmployeeInfo)
                                </th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CurrentYear)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LeaveFromDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LeaveToDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LeaveTotalDay)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.HalfDay)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Status)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UnPaidLeaveStatus)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.FromEmployeeInfo.EmployeeName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ToEmployeeInfo.EmployeeName)
                                </td>
                                <td></td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="mb-2 mr-2 btn-icon btn-shadow btn-outline-2x btn btn-outline-primary">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.Id" class="mb-2 mr-2 btn-icon btn-shadow btn-outline-2x btn btn-outline-primary">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="mb-2 mr-2 btn-icon btn-shadow btn-outline-2x btn btn-outline-primary">Delete</a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>

            @*</div><div class="row"><div class="col-sm-12 col-md-5"><div class="dataTables_info" id="example_info" role="status" aria-live="polite">Showing 1 to 10 of 57 entries</div></div><div class="col-sm-12 col-md-7"><div class="dataTables_paginate paging_simple_numbers" id="example_paginate"><ul class="pagination"><li class="paginate_button page-item previous disabled" id="example_previous"><a href="#" aria-controls="example" data-dt-idx="0" tabindex="0" class="page-link">Previous</a></li><li class="paginate_button page-item active"><a href="#" aria-controls="example" data-dt-idx="1" tabindex="0" class="page-link">1</a></li><li class="paginate_button page-item "><a href="#" aria-controls="example" data-dt-idx="2" tabindex="0" class="page-link">2</a></li><li class="paginate_button page-item "><a href="#" aria-controls="example" data-dt-idx="3" tabindex="0" class="page-link">3</a></li><li class="paginate_button page-item "><a href="#" aria-controls="example" data-dt-idx="4" tabindex="0" class="page-link">4</a></li><li class="paginate_button page-item "><a href="#" aria-controls="example" data-dt-idx="5" tabindex="0" class="page-link">5</a></li><li class="paginate_button page-item "><a href="#" aria-controls="example" data-dt-idx="6" tabindex="0" class="page-link">6</a></li><li class="paginate_button page-item next" id="example_next"><a href="#" aria-controls="example" data-dt-idx="7" tabindex="0" class="page-link">Next</a></li></ul></div></div></div>*@
        </div>
    </div>
</div>
@section Scripts{
    <script>
        $(function () {

            $('#example').DataTable();
        });
    </script>
}
