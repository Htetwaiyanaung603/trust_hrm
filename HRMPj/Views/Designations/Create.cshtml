@model HRMPj.Models.Designation

@{

    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Designation";
}


<div class="main-card mb-3 card">
    <div class="card-header">
        <div class="media flex-wrap w-100 align-items-center">
            <div class=" media-body ml-3">
                <div class="text-muted large">
                    @ViewData["Title"]
                </div>
            </div>
        </div>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>@ViewBag.Message</div>
            <div class="position-relative row form-group">
                <label asp-for="Name" class="col-sm-2 col-form-label">Name</label>
                <div class="col-sm-5">
                    <input asp-for="Name" id="Name" placeholder="Enter name" type="text" class="form-control" />
                    <span asp-validation-for="Name  " class="text-danger"></span>

                </div>
            </div>
            <div class="position-relative row form-group">
                <label asp-for="Remark" class="col-sm-2 col-form-label">Remark</label>
                <div class="col-sm-5">
                    <textarea asp-for="Remark" id="Remark" placeholder="With a placeholder" class="form-control"></textarea>
                    <span asp-validation-for="Remark  " class="text-danger"></span>

                </div>
            </div>
          
            <div class="position-relative row form-group">
                <label asp-for="DepartmentId" class="col-sm-2 col-form-label">DepartmentId</label>
                <div class="col-sm-5">
                    <select asp-for="DepartmentId" id="DepartmentId" class="form-control" asp-items="ViewBag.DepartmentId"></select>
                    <span asp-validation-for="DepartmentId " class="text-danger"></span>

                </div>
            </div>
            <div class="position-relative row form-group">
                <div class="col-sm-2"></div>
                <div class="col-sm-5">
                    <input type="submit" value="Create" class="mb-2 mr-2 btn-icon btn-pill btn btn-outline-primary" />
                    <a asp-action="Index" class="mb-2 mr-2 btn-icon btn-pill btn btn-outline-primary">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
