@model HRMPj.Models.AllowanceType

@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="main-card mb-3 card">
    <div class="card-header">
        <div class="media flex-wrap w-100 align-items-center">
            <div class=" media-body ml-3">
                <div class="text-muted large">
                    @ViewData["Title"]
                </div>
            </div>
        </div>
    </div>
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AmmountPerDay" class="control-label"></label>
                <input asp-for="AmmountPerDay" class="form-control" />
                <span asp-validation-for="AmmountPerDay" class="text-danger"></span>
            </div>
            <div class="position-relative row form-group">
                <label asp-for="Status" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-5">
                    <input type="radio" asp-for="Status" value="Daily" />Daily
                    <input type="radio" asp-for="Status" value="Monthly" />Monthly
                    <span asp-validation-for="Status " class="text-danger"></span>

                </div>
            </div>


            <div class="form-group">
                <input type="submit" value="Save" class="mb-2 mr-2 btn-icon btn-pill btn btn-outline-primary" />
                <a asp-action="Index" class="mb-2 mr-2 btn-icon btn-pill btn btn-outline-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>
    </div>
</div>

