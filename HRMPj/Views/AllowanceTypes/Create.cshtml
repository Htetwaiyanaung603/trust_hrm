@model HRMPj.Models.AllowanceTypeViewModel

@{

    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Allowance Type";
}


<div class="main-card mb-3 card">
    <div class="card-header">
        <div class="media flex-wrap w-100 align-items-center">
            <div class=" media-body ml-3">
                <div class="text-muted large">
                    @ViewData["Title"]
                </div>
            </div>
        </div>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>@ViewBag.Message</div>
            <div class="position-relative row form-group">
                <label for="Name" class="col-sm-2 col-form-label">Name</label>
                <div class="col-sm-5">
                    <input asp-for="Name" id="Name" placeholder="Enter name" type="text" class="form-control" />
                    <span asp-validation-for="Name " class="text-danger"></span>

                </div>
            </div>              
            <div class="position-relative row form-group">
                <label for="AmmountPerDay" class="col-sm-2 col-form-label">AmmountPerDay</label>
                <div class="col-sm-5">
                    <input asp-for="AmmountPerDay" id="AmmountPerDay" placeholder="Enter amount" type="text" class="form-control" />
                    <span asp-validation-for="AmmountPerDay " class="text-danger"></span>

                </div>
            </div>
            <div class="position-relative row form-group">
                <label asp-for="Status" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-5">
                    <input type="radio" asp-for="Status" value="Daily" />Daily
                    <input type="radio" asp-for="Status" value="Monthly" />Monthly
                    <span asp-validation-for="Status " class="text-danger"></span>

                </div>
            </div>
            

            <div class="position-relative row form-group">
                <div class="col-sm-2"></div>
                <div class="col-sm-5">
                    <input type="submit" value="Create" class="mb-2 mr-2 btn-icon btn-pill btn btn-outline-primary" />
                    <a asp-action="Index" class="mb-2 mr-2 btn-icon btn-pill btn btn-outline-primary">Back to List</a>
                </div>
            </div>
         </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
